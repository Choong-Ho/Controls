<Application x:Class="ExampleApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExampleApp"
             xmlns:ctrl="clr-namespace:Controls;assembly=Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BaseResources;component/Freezables/FreezableResource.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource NormalButtonStyle}"/>
            <Style TargetType="{x:Type ctrl:DialogWindow}"/>
            <Style TargetType="{x:Type ctrl:MessageBoxWindow}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
